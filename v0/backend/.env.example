# Application
APP_NAME=YouTube Transcription SaaS
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/transcription_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Transcription Services
TRANSCRIPTION_SERVICE=whisper  # Options: whisper, assemblyai, deepgram
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
ASSEMBLYAI_API_KEY=your-assemblyai-key-here
DEEPGRAM_API_KEY=your-deepgram-key-here

# Language Processing
LANGUAGE_TOOL_ENABLED=True
SPACY_MODEL=fr_core_news_md

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=524288000  # 500MB in bytes
ALLOWED_EXTENSIONS=mp3,wav,m4a,mp4,webm

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
